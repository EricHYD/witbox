<?xml version="1.0"?>
<package>
	<distri name="ubuntu" upgrade="apt-get upgrade -y" install="apt-get install -y">
		<release version="all">
			<app class="sys">dpkg-dev gparted</app>
			<app class="lib">libgmp3-dev libmpfr-dev libmpc-dev</app>
			<app class="lib">libncurses5-dev zlib1g-dev libsdl1.2-dev libasound2-dev libasound2-doc</app>
			<app class="lib">liblzo2-2 liblzo2-dev</app>
			<app class="gui">libgtk-3-dev libqt4-dev</app>
			<app class="Unknown">patch autoconf automake bison flex gawk gettext libtool m4 sed texinfo</app>
			<app class="scm" post="ubuntu.sh">git git-email subversion</app>
			<?to add: class="mail" mutt mutt-patched msmtp?>
			<app class="toolchain">gcc g++</app>
			<app class="toolchain" arch="x86_64">libc6-dev-i386</app>
			<app class="editor" post="setup.sh">vim vim-gnome ctags dos2unix</app>
			<app class="java">openjdk-7-jdk eclipse eclipse-cdt</app>
			<app class="server" post="nfs.sh">nfs-kernel-server openssh</app>
			<app class="tftp">tftp-hpa tftpd-hpa</app>
			<app class="serial" post="setup.sh">minicom ckermit</app>
			<app class="ereader">evince poppler-data</app>
			<app class="fs">nfs-common cifs ntfs-3g</app>
			<app class="3d">mesa-utils</app>
			<app class="latex">latex-cjk-chinese latex-beamer texlive-fonts-extra texlive-latex-extra texlive-fonts-recommended</app>
			<app class="vm" default='n'>qemu qemu-kvm</app>
			<app class="browser">chromium-browser chromium-codecs-ffmpeg flashplugin-installer</app>
			<app class="apache2" post="ubuntu.sh">apache2 libapache2-mod-python libapache2-mod-auth-mysql</app>
			<app class="media">kmplayer gstreamer1.0-plugins-base gstreamer1.0-plugins-ugly gstreamer1.0-plugins-good gstreamer1.0-libav</app>
			<app class="language">mythes-en-us libreoffice-l10n-en-za mythes-en-au hunspell-en-ca thunderbird-locale-en myspell-en-za libreoffice-help-en-gb wbritish libreoffice-l10n-en-gb openoffice.org-hyphenation myspell-en-gb thunderbird-locale-en-gb hyphen-en-us myspell-en-au thunderbird-locale-en-us kde-l10n-engb</app>
			<app class="fonts">fonts-arphic-uming fonts-arphic-ukai language-pack-gnome-zh-hans-base language-pack-gnome-zh-hans language-pack-zh-hans-base language-pack-zh-hans libsunpinyin3 sunpinyin-data firefox-locale-zh-hans ibus-sunpinyin ibus-table-wubi </app>

		</release>
		<release version="raring">
			<app class="toolchain">libstdc++6-4.7-dev</app>
		</release>
		<release version="maverick">
			<app class="toolchain">libstdc++6-4.5-dev</app>
		</release>
	</distri>
	<distri name="debian" upgrade="apt-get upgrade -y" install="apt-get install -y">
		<release version="squeeze">
			<app class="Unknown">fixme</app>
		</release>
	</distri>
	<distri name="fedora" upgrade="yum upgrade -y" install="yum install -y">
		<release version="langhlin">
			<app class="Unknown">fixme</app>
		</release>
	</distri>
	<distri name="centos" upgrade="yum upgrade -y" install="yum install -y">
		<release version="all">
			<app class="editor" post="setup.sh">vim ctags dos2unix</app>
			<app class="toolchain">gcc gcc-c++</app>
			<app class="ssh">openssh</app>
			<app class="nfs" post="setup.sh">nfs-utils portmap</app>
			<app class="apache2" post="centos.sh">httpd httpd-devel mysql php mysql-server php-mysql python</app>
			<app class="scm" post="centos.sh">git subversion git-daemon</app>
			<app class="server" post="centos.sh">samba</app>
		</release>
	</distri>
</package>
